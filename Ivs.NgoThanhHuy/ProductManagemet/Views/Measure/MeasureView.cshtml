@model IVS.Models.Model.MeasureViewModel
@{
    ViewBag.Title = "Measure Detail";
}
<section class="content-header">
    <h1>Measure Detail</h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> @Html.ActionLink("Home", "Index", "Home", null, new { })</a></li>
        <li>@Html.ActionLink("Measure", "MeasureSearch", "Measure", null, new { })</li>
        <li class="active">Detail</li>
    </ol>
</section>
@if (!String.IsNullOrEmpty((string)TempData["Success"]))
{
    <div id="success" class="success">
        @TempData["Success"]
    </div>
}
@if (!String.IsNullOrEmpty((string)TempData["Error"]))
{
    <div id="error" class="error">
        @TempData["Error"]
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Measure Detail</div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.code)
                                <label class="lblRequirement">*</label>
                                @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.name)
                                <label class="lblRequirement">*</label>
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.description)

                                @Html.TextAreaFor(m => m.description, new { @class = "form-control input-sm", maxlength = "256", @style = "height: 125px;", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                @Html.ActionLink("Back", "MeasureSearch", "Measure", new { }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Edit", "MeasureEdit", "Measure", new { @id = @Model.id }, new { @class = "btn btn-primary" })
                            </div>

                }
            </div>
            </div>
        </div>
    </div>

